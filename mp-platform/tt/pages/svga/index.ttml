<page-meta></page-meta>

<view class="palette-container">
  <fuck-animation current="{{ current }}" sources="{{ sources }}" class="animation"></fuck-animation>

  <view class="footer">
    <button class="foot-btn" type="primary" bind:tap="handleSwitchPrev">上一张</button>
    <button class="foot-btn" type="primary" bind:tap="handleSwitchAtRandom">试一试</button>
    <button class="foot-btn" type="primary" bind:tap="handleSwitchNext">下一张</button>
  </view>
</view>

<view class="empty-space"></view>
